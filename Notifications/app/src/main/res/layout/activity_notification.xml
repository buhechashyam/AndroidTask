<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".notifications.NotificationActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_simple_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_simple_notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_direct_reply_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/txt_direct_reply_notification"
        app:layout_constraintEnd_toEndOf="@+id/btn_simple_notification"
        app:layout_constraintStart_toStartOf="@+id/btn_simple_notification"
        app:layout_constraintTop_toBottomOf="@+id/btn_simple_notification" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_custom_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/txt_custom_notification"
        app:layout_constraintEnd_toEndOf="@+id/btn_direct_reply_notification"
        app:layout_constraintStart_toStartOf="@+id/btn_direct_reply_notification"
        app:layout_constraintTop_toBottomOf="@+id/btn_direct_reply_notification" />


</androidx.constraintlayout.widget.ConstraintLayout>