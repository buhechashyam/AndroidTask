<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapWithIntentsActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_go_to_map"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Go To Map"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_find"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Find Restaurants"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_go_to_map"
        app:layout_constraintStart_toStartOf="@+id/btn_go_to_map"
        app:layout_constraintTop_toBottomOf="@+id/btn_go_to_map" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_track_two_route"
        android:text="Ahmadabad to Gandhinagar"
        app:layout_constraintStart_toStartOf="@id/btn_find"
        app:layout_constraintEnd_toEndOf="@id/btn_find"
        app:layout_constraintTop_toBottomOf="@id/btn_find"
        />

</androidx.constraintlayout.widget.ConstraintLayout>